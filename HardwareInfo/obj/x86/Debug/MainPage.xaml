<Page
    x:Class="HardwareInfo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HardwareInfo"
    xmlns:fbsdk="using:winsdkfb"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--Grid containing all the images and textblocks with describtions-->
    <!--Scrollviewer also set up to control scrolling between pages-->
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="Assets/Images/backround.jpg" 
                        Stretch="UniformToFill" Opacity="0.5" />
        </Grid.Background>

        <Pivot x:ConnectionId='1' x:Name="pvtTitle" FontWeight="Bold">

            <PivotItem Header="About">
                <ScrollViewer Margin="0">
                    <StackPanel>
                        <Image Source="Assets/Images/about.jpg" Height="140" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='27' x:Name="tblAbout0" TextWrapping="Wrap" FontWeight="Bold"
                            FontSize="17" HorizontalAlignment="Center"
                            Margin="10, 10, 10, 0" Grid.Column="1" />

                        <fbsdk:FBLoginButton x:ConnectionId='28' x:Name="MainLogin" Width="100" Height="58"                         HorizontalAlignment="Center" />
                        <Button x:ConnectionId='29' x:Name="Post"                    HorizontalAlignment="Center">Post to Feed</Button>

                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="Processor" Margin="64,0,12,0">
                <ScrollViewer Margin="-52,0,0,0">
                    <StackPanel>
                        <Image Source="Assets/Images/processor.jpg" Height="140" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='26' x:Name="tblAbout1" TextWrapping="Wrap" 
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="Motherboard" Margin="63,0,12,0">
                <ScrollViewer Margin="-44,0,0,0">
                    <StackPanel>
                        <Image Source="Assets/Images/motherboard.jpg" Height="140" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='25' x:Name="tblAbout2" TextWrapping="Wrap" 
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="Graphics" Margin="67,0,12,0">
                <ScrollViewer Margin="-43,0,0,0">
                    <StackPanel Width="324">
                        <Image Source="Assets/Images/graphics.jpg" Height="140" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='24' x:Name="tblAbout3" TextWrapping="Wrap" 
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="RAM" Margin="65,0,12,0">
                <ScrollViewer Margin="-47,0,0,0">
                    <StackPanel>
                        <Image Source="Assets/Images/ram.jpeg" Height="140" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='23' x:Name="tblAbout4" TextWrapping="Wrap" 
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="Storage" Margin="69,0,12,0">
                <ScrollViewer Margin="-56,0,0,0">
                    <StackPanel>
                        <Image Source="Assets/Images/storage.jpg" Height="140" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='22' x:Name="tblAbout5" TextWrapping="Wrap" 
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="Power" Margin="66,0,12,0">
                <ScrollViewer Margin="-47,0,0,0">
                    <StackPanel>
                        <Image Source="Assets/Images/power.jpg" Height="140" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='21' x:Name="tblAbout6" TextWrapping="Wrap" 
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem Header="Errors" Margin="66,0,12,0">
                <ScrollViewer Margin="-50,0,0,0">
                    <StackPanel>
                        <Image Source="Assets/Images/error.jpg" Height="113" Width="228" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="10,10,10,0" />
                        <TextBlock x:ConnectionId='2' x:Name="tblAbout7" TextWrapping="Wrap"
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>

                        <!--Adapted from http://stackoverflow.com/questions/31761038/audio-and-video-playing-in-windows-10-universal-app -->
                        <!--Setting up media elements to link to sound files-->
                        <MediaElement x:ConnectionId='3' x:Name="singlebeep" AutoPlay="False"
                                      Source="Assets/Sounds/singlebeep.wav" 
                                      AreTransportControlsEnabled="True"/>
                        <MediaElement x:ConnectionId='4' x:Name="twobeep" AutoPlay="False"
                                      Source="Assets/Sounds/twobeep.wav" />
                        <MediaElement x:ConnectionId='5' x:Name="triplelongbeep" AutoPlay="False"
                                      Source="Assets/Sounds/triplelongbeep.wav" />
                        <MediaElement x:ConnectionId='6' x:Name="onelongoneshort" AutoPlay="False"
                                      Source="Assets/Sounds/1long1short.wav" />
                        <MediaElement x:ConnectionId='7' x:Name="onelongtwoshort" AutoPlay="False"
                                      Source="Assets/Sounds/1long2short.wav" />
                        <MediaElement x:ConnectionId='8' x:Name="longbeep" AutoPlay="False"
                                      Source="Assets/Sounds/longbeep.wav" />

                        <!--Setting up textblock for the info and the buttons to play sounds-->
                        <TextBlock x:ConnectionId='9' x:Name="tblError0" TextWrapping="Wrap"
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                        <Button x:ConnectionId='10'                                  HorizontalAlignment="Center">Play Single Beep</Button>

                        <TextBlock x:ConnectionId='11' x:Name="tblError1" TextWrapping="Wrap"
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                        <Button x:ConnectionId='12'                               HorizontalAlignment="Center">Play Two Beeps</Button>

                        <TextBlock x:ConnectionId='13' x:Name="tblError2" TextWrapping="Wrap"
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                        <Button x:ConnectionId='14'                                       HorizontalAlignment="Center">Play Triple Beep</Button>

                        <TextBlock x:ConnectionId='15' x:Name="tblError3" TextWrapping="Wrap"
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                        <Button x:ConnectionId='16'                                   HorizontalAlignment="Center">Play 1 Long 1 Short Beep</Button>

                        <TextBlock x:ConnectionId='17' x:Name="tblError4" TextWrapping="Wrap"
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                        <Button x:ConnectionId='18'                              HorizontalAlignment="Center">Play 1 Long 2 Short Beep</Button>

                        <TextBlock x:ConnectionId='19' x:Name="tblError5" TextWrapping="Wrap"
                            HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
                            FontSize="17"  Margin="10,10,0,0" Grid.Column="1"/>
                        <Button x:ConnectionId='20'                                HorizontalAlignment="Center">Play Long Beep</Button>

                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

